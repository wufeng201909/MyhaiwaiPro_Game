<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myths_dialog_bg"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/lay_payresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_30"
            android:paddingRight="@dimen/margin_30"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/dialog_confirm"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_80"
            android:visibility="gone">
            <TextView
                android:id="@+id/pay_result_icon"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:id="@+id/pay_result_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/lay_dia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_30"
            android:paddingRight="@dimen/margin_30"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/dialog_confirm"
            android:layout_marginTop="@dimen/margin_50"
            android:layout_marginBottom="@dimen/margin_80">
            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </ScrollView>
        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_20"
            android:textSize="18sp"
            android:text="I got it"
            android:background="@drawable/myths_dialog_confirm"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>