<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:id="@+id/item_lay"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:background="@drawable/myths_payitem_bg">
        <TextView
            android:id="@+id/item_log"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="12dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_toRightOf="@id/item_log"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/item_lay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:id="@+id/item_offic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/myths_official"
                    android:visibility="visible">
                    <ImageView
                        android:id="@+id/item_offic_icon"
                        android:background="@drawable/myths_usdt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/item_offic_con"
                        android:text="Official"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_lay_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/margin_50"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="11sp"/>
                <LinearLayout
                    android:id="@+id/item_rebate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/myths_rebate"
                    android:visibility="visible">
                    <TextView
                        android:text="100%"
                        android:textSize="11sp"
                        android:textColor="@color/orange"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/item_req"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/myths_req"/>
    </RelativeLayout>

</RelativeLayout>